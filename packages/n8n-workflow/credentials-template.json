{
  "credentials": [
    {
      "name": "Job Finder API Auth",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "Bearer YOUR_API_TOKEN_HERE"
      },
      "description": "Authentication for Job Finder API endpoints"
    },
    {
      "name": "Brevo Email Credentials",
      "type": "httpHeaderAuth",
      "data": {
        "name": "api-key",
        "value": "YOUR_BREVO_API_KEY_HERE"
      },
      "description": "Brevo API key for email notifications"
    },
    {
      "name": "Brevo SMS Credentials",
      "type": "httpHeaderAuth",
      "data": {
        "name": "api-key",
        "value": "YOUR_BREVO_SMS_API_KEY_HERE"
      },
      "description": "Brevo API key for SMS notifications"
    }
  ],
  "environmentVariables": {
    "API_BASE_URL": "https://your-job-finder-api.com",
    "NOTIFICATION_EMAIL": "admin@your-domain.com",
    "N8N_LOG_LEVEL": "info",
    "WORKFLOW_TIMEZONE": "America/New_York"
  },
  "setup": {
    "steps": [
      "1. Create Job Finder API Auth credential in N8N",
      "2. Generate API token from your Job Finder backend",
      "3. Set up Brevo account and get API keys",
      "4. Configure environment variables in N8N settings",
      "5. Import workflow JSON into N8N",
      "6. Test workflow execution manually",
      "7. Activate workflow for scheduled execution"
    ],
    "apiTokenGeneration": {
      "endpoint": "POST /api/auth/generate-token",
      "payload": {
        "purpose": "n8n-workflow",
        "expiresIn": "1y"
      },
      "note": "Generate a long-lived token specifically for N8N workflow usage"
    }
  },
  "testing": {
    "webhookEndpoints": {
      "manualTrigger": "POST /webhook/job-finder/manual-trigger",
      "testPreferences": "GET /webhook/job-finder/test-preferences",
      "testWebsites": "GET /webhook/job-finder/test-websites"
    },
    "testData": {
      "samplePreference": {
        "userId": "test-user-id",
        "profileName": "Test Profile",
        "jobTitle": "Software Engineer",
        "keywords": ["javascript", "react", "node.js"],
        "location": {
          "city": "San Francisco",
          "state": "CA",
          "remote": true
        },
        "contractTypes": ["permanent", "contract"],
        "salaryRange": {
          "min": 80000,
          "max": 120000,
          "currency": "USD"
        },
        "isActive": true
      }
    }
  }
}