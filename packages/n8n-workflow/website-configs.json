{
  "websites": [
    {
      "name": "Indeed",
      "baseUrl": "https://www.indeed.com",
      "searchUrlTemplate": "https://www.indeed.com/jobs?q={{jobTitle}}&l={{location}}&sort=date",
      "scrapingConfig": {
        "jobSelector": "[data-jk]",
        "titleSelector": "[data-testid='job-title'] a span",
        "companySelector": "[data-testid='company-name']",
        "locationSelector": "[data-testid='job-location']",
        "salarySelector": "[data-testid='job-salary']",
        "linkSelector": "[data-testid='job-title'] a",
        "descriptionSelector": ".jobsearch-jobDescriptionText",
        "dateSelector": ".date"
      },
      "rateLimitMs": 3000,
      "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      }
    },
    {
      "name": "LinkedIn Jobs",
      "baseUrl": "https://www.linkedin.com",
      "searchUrlTemplate": "https://www.linkedin.com/jobs/search/?keywords={{jobTitle}}&location={{location}}&sortBy=DD",
      "scrapingConfig": {
        "jobSelector": ".job-search-card",
        "titleSelector": ".base-search-card__title",
        "companySelector": ".base-search-card__subtitle a",
        "locationSelector": ".job-search-card__location",
        "salarySelector": ".job-search-card__salary-info",
        "linkSelector": ".base-card__full-link",
        "descriptionSelector": ".show-more-less-html__markup",
        "dateSelector": ".job-search-card__listdate"
      },
      "rateLimitMs": 5000,
      "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      },
      "requiresAuth": true
    },
    {
      "name": "Glassdoor",
      "baseUrl": "https://www.glassdoor.com",
      "searchUrlTemplate": "https://www.glassdoor.com/Job/jobs.htm?sc.keyword={{jobTitle}}&locT=C&locId={{locationId}}&jobType=all&fromAge=1&minSalary=0&includeNoSalaryJobs=true&radius=25&cityId=-1&minRating=0.0&industryId=-1&sgocId=-1&seniorityType=all&companyId=-1&employerSizes=0&applicationType=0&remoteWorkType=0",
      "scrapingConfig": {
        "jobSelector": "[data-test='job-listing']",
        "titleSelector": "[data-test='job-title']",
        "companySelector": "[data-test='employer-name']",
        "locationSelector": "[data-test='job-location']",
        "salarySelector": "[data-test='detailSalary']",
        "linkSelector": "[data-test='job-title'] a",
        "descriptionSelector": ".jobDescriptionContent",
        "dateSelector": "[data-test='job-age']"
      },
      "rateLimitMs": 4000,
      "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      }
    },
    {
      "name": "Monster",
      "baseUrl": "https://www.monster.com",
      "searchUrlTemplate": "https://www.monster.com/jobs/search?q={{jobTitle}}&where={{location}}&sort=rv.di.dt",
      "scrapingConfig": {
        "jobSelector": ".job-cardstyle__JobCardComponent",
        "titleSelector": ".job-cardstyle__JobTitle",
        "companySelector": ".job-cardstyle__JobCompany",
        "locationSelector": ".job-cardstyle__JobLocation",
        "salarySelector": ".job-cardstyle__JobSalary",
        "linkSelector": ".job-cardstyle__JobTitle a",
        "descriptionSelector": ".job-description",
        "dateSelector": ".job-cardstyle__JobDate"
      },
      "rateLimitMs": 3500,
      "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      }
    },
    {
      "name": "ZipRecruiter",
      "baseUrl": "https://www.ziprecruiter.com",
      "searchUrlTemplate": "https://www.ziprecruiter.com/jobs-search?search={{jobTitle}}&location={{location}}&days=1",
      "scrapingConfig": {
        "jobSelector": "[data-testid='job_result']",
        "titleSelector": "[data-testid='job-title']",
        "companySelector": "[data-testid='job-company']",
        "locationSelector": "[data-testid='job-location']",
        "salarySelector": "[data-testid='job-salary']",
        "linkSelector": "[data-testid='job-title'] a",
        "descriptionSelector": ".job_description",
        "dateSelector": "[data-testid='job-age']"
      },
      "rateLimitMs": 2500,
      "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      }
    },
    {
      "name": "SimplyHired",
      "baseUrl": "https://www.simplyhired.com",
      "searchUrlTemplate": "https://www.simplyhired.com/search?q={{jobTitle}}&l={{location}}&fdb=1",
      "scrapingConfig": {
        "jobSelector": "[data-testid='searchSerpJob']",
        "titleSelector": "[data-testid='searchSerpJobTitle']",
        "companySelector": "[data-testid='searchSerpJobCompanyName']",
        "locationSelector": "[data-testid='searchSerpJobLocation']",
        "salarySelector": "[data-testid='searchSerpJobSalaryEst']",
        "linkSelector": "[data-testid='searchSerpJobTitle'] a",
        "descriptionSelector": ".jobposting-description",
        "dateSelector": "[data-testid='searchSerpJobDateStamp']"
      },
      "rateLimitMs": 3000,
      "headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
      }
    }
  ],
  "defaultConfig": {
    "rateLimitMs": 3000,
    "timeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 5000,
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
      "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
      "Accept-Language": "en-US,en;q=0.5",
      "Accept-Encoding": "gzip, deflate",
      "Connection": "keep-alive",
      "Upgrade-Insecure-Requests": "1"
    }
  },
  "notes": {
    "rateLimiting": "Each website has different rate limiting requirements. Adjust rateLimitMs accordingly.",
    "selectors": "CSS selectors may change when websites update their structure. Monitor and update as needed.",
    "authentication": "Some sites like LinkedIn may require authentication for full access.",
    "robotsTxt": "Always respect robots.txt and terms of service for each website.",
    "userAgent": "Use realistic User-Agent strings to avoid being blocked."
  }
}